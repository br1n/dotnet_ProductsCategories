@{
    ViewData["Title"] = "Categories";
}

<h5><a href="/">Products</a> | Categories</h5>

@model Category
<form asp-action="Create" asp-controller="Category" method="post">
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name">

    <input type="submit" value="Add Category">
</form>
<hr>
<h5>Existing Categories</h5>

@foreach (var category in ViewBag.AllCategories)
{
    <p><a asp-action="Show" asp-controller="Category" asp-route-categoryId="@category.CategoryId">@category.Name</a></p>
}
